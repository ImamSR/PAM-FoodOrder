<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page4_spagetti">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/spageti2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spaghetti"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spaghetti"
            android:textColor="#733F0E"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#733F0E"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:text="Price: Rp 30.000,00"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:justificationMode="inter_word"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#733F0E"
        android:text="Spaghetti Cocok bagi anda yang ingin merasakan spaghetti original dengan bumbu yang oriental"/>

    <Button
        android:id="@+id/OrderIdBtn"
        android:layout_height="wrap_content"
        android:layout_width="290dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="#D52F2F"
        app:cornerRadius="0dp"
        android:layout_marginTop="15dp"
        app:strokeColor="#F9B916"
        app:strokeWidth="1dp"
        android:text="Order Now" />

    <Button
        android:id="@+id/BackIdBtn"
        android:layout_height="wrap_content"
        android:layout_width="290dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#D52F2F"
        app:cornerRadius="0dp"
        app:strokeColor="#F9B916"
        app:strokeWidth="1dp"
        android:text="Back" />

</LinearLayout>